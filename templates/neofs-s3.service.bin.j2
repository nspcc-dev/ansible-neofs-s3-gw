[Unit]
Description=NeoFS S3 Gateway
Requires=network.target

[Service]
Type=simple
ExecStart={{ neofs_s3__bin_path }}/neofs-s3-gw --config {{ neofs_s3__conf_dir }}s3_config.yaml --wallet {{ neofs_s3__conf_dir }}s3_wallet.json
User={{ neofs_s3__user }}
Group={{ neofs_s3__group }}
Restart=always
RestartSec=5
StandardError=journal
SyslogIdentifier={{ neofs_s3__svc_name }}
PrivateTmp=true
WorkingDirectory={{ neofs_s3__conf_dir }}

[Install]
WantedBy=multi-user.target
