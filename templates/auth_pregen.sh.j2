#!/usr/bin/env bash

echo "Authmate issue-secret"
RESULT=$(AUTHMATE_WALLET_PASSPHRASE="" neofs-s3-authmate issue-secret --wallet s3_wallet.json \
  --peer {{ neofs_s3__neofs_peer }} --gate-public-key {{ neofs_s3__public_key }} \
  --create-session-token --bearer-rules rules.json)

ACCESS_KEY=$(echo $RESULT | jq -r '.access_key_id')
SECRET_KEY=$(echo $RESULT | jq -r '.secret_access_key')
